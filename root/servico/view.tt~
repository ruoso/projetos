         (<A HREF="[% c.uri_for_action('/alocaco/edit', val.servico_id, val.pessoa_id, val.data_inicio, val.data_fim) %]">Editar</A> | <A HREF="[% c.uri_for_action('/alocaco/destroy', val.servico_id, val.pessoa_id, val.data_inicio, val.data_fim) %]">Remover</A>)
