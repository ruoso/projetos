<DT>Objetivos, metas e medições:</DT>
<DD>
   <UL>
    [% FOREACH val IN
       item.objetivos({},
                      { prefetch => { metas => 'medicoes' },
                        order_by => [ 'me.objetivo_id', 'metas.data_fim', 'medicoes.data_medicao' ] }) %]
     <LI>[% val.descricao %]
         (<A HREF="[% c.uri_for_action('/objetivo/edit', val.objetivo_id) %]">Editar</A> | <A HREF="[% c.uri_for_action('/objetivo/destroy', val.objetivo_id) %]">Remover</A>)
     </LI>
     <UL>
     [% FOREACH meta IN val.metas %]
       <LI>[% meta.descricao %] ([% meta.data_inicio.dmy %] a [% meta.data_fim.dmy %])
           (<A HREF="[% c.uri_for_action('/meta/edit', meta.meta_id) %]">Editar</A> | <A HREF="[% c.uri_for_action('/meta/destroy', meta.meta_id) %]">Remover</A>)
       </LI>
       <UL>
       [% FOREACH medicao IN meta.medicoes %]
         <LI>
             [% IF medicao.data_medicao %]
              [% medicao.data_medicao.dmy %][% IF medicao.percentual ; ' (' _ medicao.percentual _ '%)' ; END %]:
             [% END %]
             [% medicao.descricao %]<BR>
                         
             [% IF medicao.aceite_registrado %]
             Aceite registrado em [% medicao.aceite_registrado.dmy %].
             [% END %]

             (<A HREF="[% c.uri_for_action('/medico/edit', medicao.medicao_id) %]">Editar</A> | <A HREF="[% c.uri_for_action('/medico/destroy', medicao.medicao_id) %]">Remover</A>)

         </LI>
       [% END %]
       </UL>
     [% END %]
     </UL>
    [% END %]
   </UL>
    
      (<A HREF="[% c.uri_for_action('/objetivo/edit') %]">Adicionar Objetivo</A> |
        <A HREF="[% c.uri_for_action('/meta/edit') %]">Adicionar Meta</A> |
          <A HREF="[% c.uri_for_action('/medico/edit') %]">Adicionar Medição</A>)
</DD>

